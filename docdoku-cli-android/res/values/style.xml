<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Holo" >
        <!--item name="android:background">@color/background</item-->
        <item name="android:textSize">20sp</item>
        <item name="android:windowBackground">@color/background</item>
    </style>
    <!--Title bar faded color style-->
    <style name="TitleBar" parent="AppTheme">
        <item name="android:background">@drawable/title_bar</item>
    </style>
    <!--Text styles-->
    <style name="BigTitle" parent="AppTheme">
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">26sp</item>
    </style>
    <style name="MediumTitle" parent="AppTheme">
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="SmallText" parent="AppTheme">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- Side menu style -->
    <style name="MenuItem" parent="AppTheme">
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">22sp</item>
    </style>
    <!--Colored tiles for metro style menus-->
    <style name="GreenTile" parent="AppTheme">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/green_rectangle</item>
    </style>
    <style name="RedTile" parent="AppTheme">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/red_rectangle</item>
    </style>
    <style name="YellowTile" parent="AppTheme">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/yellow_rectangle</item>
    </style>
</resources>