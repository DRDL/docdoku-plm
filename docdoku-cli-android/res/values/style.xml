<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AppTheme" parent="android:Theme.Holo" >
        <item name="android:textSize">20sp</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:alertDialogStyle">@style/Dialog</item>
        <item name="android:actionBarStyle">@style/Theme.AppTheme.ActionBar</item>
    </style>
    <style name="Theme.AppTheme.ActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/light_background</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:titleTextStyle">@style/Theme.AppTheme.ActionBar.TitleTextStyle</item>
    </style>
    <style name="Theme.AppTheme.ActionBar.TitleTextStyle">
        <item name="android:textColor">@color/darkGrey</item>
    </style>
    <style name="Dialog" parent="android:Theme.Holo.Light.Dialog">
        <item name = "android:textColor">@color/darkGrey</item>
    </style>
    <!--Text styles-->
    <style name="BigTitle" parent="Theme.AppTheme">
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">26sp</item>
    </style>
    <style name="MediumTitle" parent="Theme.AppTheme">
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="SmallText" parent="Theme.AppTheme">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- Indicators with image, shown in document and part lists -->
    <style name="Indicator" parent="Theme.AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- Side menu style -->
    <style name="Menu" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
    </style>
    <style name="MenuTitle" parent="Menu">
        <item name="android:background">@color/lightBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">26sp</item>
    </style>
    <style name="MenuItem" parent="Menu">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/clickable_item_background</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/menu_item_selectable_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
    <style name="MenuRadioButton" parent="MenuItem">
        <item name="android:background">@color/transparent</item>
    </style>

</resources>