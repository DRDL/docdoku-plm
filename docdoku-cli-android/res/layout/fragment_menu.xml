<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@color/background">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

        <TextView
                android:id="@+id/workspace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MenuItem"
                android:text="@string/workspace"/>

        <RadioGroup
                android:id="@+id/workspaceRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

        </RadioGroup>

        <TextView
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_marginTop="5dp"
                android:paddingTop="5dip"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp" />

        <TextView
                android:id="@+id/documents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MenuItem"
                android:text="@string/documents"/>

        <LinearLayout
                android:id="@+id/documentSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

            <ImageButton
                    android:id="@+id/documentSearchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:background="@color/transparent"
                    android:src="@drawable/search"/>

            <TextView
                    android:id="@+id/rechercherDocuments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/MenuItem"
                    android:text="@string/documentSearch"/>
        </LinearLayout>

        <TextView
                android:id="@+id/documentsRecemmentConsultes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                style="@style/MenuItem"
                android:text="@string/documentHistory"/>

        <TextView
                android:id="@+id/allDocuments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                style="@style/MenuItem"
                android:text="@string/allDocuments"/>

        <TextView
                android:id="@+id/checkedOutDocuments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                style="@style/MenuItem"
                android:text="@string/checkedOutDocuments"/>

        <TextView
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_marginTop="5dp"
                android:paddingTop="5dip"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp" />

        <TextView
                android:id="@+id/articles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MenuItem"
                android:text="@string/parts"/>

        <LinearLayout
                android:id="@+id/articleSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

            <ImageButton
                    android:id="@+id/articleSearchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:background="@color/transparent"
                    android:src="@drawable/search"/>

            <TextView
                    android:id="@+id/rechercherArticles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/MenuItem"
                    android:text="@string/partSearch"/>
        </LinearLayout>

        <TextView
                android:id="@+id/articlesRecemmentConsultes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                style="@style/MenuItem"
                android:text="@string/partHistory"/>

        <TextView
                android:id="@+id/allParts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                style="@style/MenuItem"
                android:text="@string/allParts"/>

    </LinearLayout>

</ScrollView>

