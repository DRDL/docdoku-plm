<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/Menu"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

    <LinearLayout
            style="@style/Menu"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

        <TextView
                android:layout_height="wrap_content"
                style="@style/MenuTitle"
                android:text="@string/workspace"/>

        <RadioGroup
                android:id="@+id/workspaceRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MenuRadioButton"/>

        <TextView
                android:layout_height="wrap_content"
                style="@style/MenuTitle"
                android:text="@string/documents"/>

        <TextView
                android:id="@+id/documentSearch"
                android:layout_height="wrap_content"
                style="@style/MenuItem"
                android:text="@string/documentSearch"
                android:drawableLeft="@drawable/search_dark"/>

        <TextView
                android:id="@+id/recentlyViewedDocuments"
                android:layout_height="wrap_content"
                style="@style/MenuItem"
                android:text="@string/documentHistory"
                android:drawableLeft="@drawable/history_dark"/>

        <TextView
                android:id="@+id/allDocuments"
                android:layout_height="wrap_content"
                style="@style/MenuItem"
                android:text="@string/allDocuments"
                android:drawableLeft="@drawable/all_elements_dark"/>

        <TextView
                android:id="@+id/documentFolders"
                android:layout_height="wrap_content"
                style="@style/MenuItem"
                android:text="@string/documentFolders"
                android:drawableLeft="@drawable/folders_dark"/>

        <TextView
                android:id="@+id/checkedOutDocuments"
                android:layout_height="wrap_content"
                style="@style/MenuItem"
                android:text="@string/checkedOutDocuments"
                android:drawableLeft="@drawable/checked_out_current_user_dark"/>

        <TextView
                android:layout_height="wrap_content"
                style="@style/MenuTitle"
                android:text="@string/parts"/>

        <TextView
                android:id="@+id/partSearch"
                android:layout_height="wrap_content"
                style="@style/MenuItem"
                android:text="@string/partSearch"
                android:drawableLeft="@drawable/search_dark"/>

        <TextView
                android:id="@+id/recentlyViewedParts"
                android:layout_height="wrap_content"
                style="@style/MenuItem"
                android:text="@string/partHistory"
                android:drawableLeft="@drawable/history_dark"/>

        <TextView
                android:id="@+id/allParts"
                android:layout_height="wrap_content"
                style="@style/MenuItem"
                android:text="@string/allParts"
                android:drawableLeft="@drawable/all_elements_dark"/>

        <TextView
            android:layout_height="1px"
            android:layout_width="wrap_content"
            style="@style/MenuItem"
            android:clickable="false"
            android:text="@string/emptyMenuItem"/>

    </LinearLayout>

</ScrollView>

