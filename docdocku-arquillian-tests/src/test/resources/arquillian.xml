<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns="http://jboss.org/schema/arquillian"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="
        http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <container qualifier="glassfish-embedded" default="true">
        <configuration>
            <property name="configurationXml">docdocku-arquillian-tests/src/test/resources-glassfish-embedded/domain.xml</property>

            <property name="resourcesXml">
                docdocku-arquillian-tests/src/test/resources-glassfish-embedded/glassfish-resources.xml
            </property>
            <engine>
                <property name="deploymentExportPath">docdocku-arquillian-tests/target/deployments</property>
            </engine>

        </configuration>

    </container>

</arquillian>

