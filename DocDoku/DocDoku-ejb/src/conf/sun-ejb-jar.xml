<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sun-ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD Application Server 9.0 EJB 3.0//EN" "http://www.sun.com/software/appserver/dtds/sun-ejb-jar_3_0-0.dtd">
<sun-ejb-jar>
    <security-role-mapping>
        <role-name>users</role-name>
        <group-name>users</group-name>
    </security-role-mapping>
    <enterprise-beans>
        <ejb>
            <ejb-name>CommandBean</ejb-name>
            <jndi-name>ejb/CommandBean</jndi-name>
            <resource-ref>
                <res-ref-name>jms/docdokuConnFactory</res-ref-name>
                <jndi-name>jms/docdokuConnFactory</jndi-name>
                <default-resource-principal>
                    <name>guest</name>
                    <password>guest</password>
                </default-resource-principal>
            </resource-ref>
            <message-destination-ref>
                <message-destination-ref-name>jms/docdokuIndexerQueue</message-destination-ref-name>
                <jndi-name>jms/docdokuIndexerQueue</jndi-name>
            </message-destination-ref>
            <message-destination-ref>
                <message-destination-ref-name>jms/docdokuMailerQueue</message-destination-ref-name>
                <jndi-name>jms/docdokuMailerQueue</jndi-name>
            </message-destination-ref>
            <webservice-endpoint>
                <port-component-name>CommandBean</port-component-name>
                <endpoint-address-uri>webservices/DocDoku</endpoint-address-uri>
                <login-config>
                    <auth-method>BASIC</auth-method>
                    <realm>docdokuRealm</realm>
                </login-config>
            </webservice-endpoint>
        </ejb>
        <ejb>
            <ejb-name>MailerBean</ejb-name>
            <jndi-name>jms/docdokuMailerQueue</jndi-name>
            <resource-ref>
                <res-ref-name>mail/docdokuSMTP</res-ref-name>
                <jndi-name>mail/docdokuSMTP</jndi-name>
            </resource-ref>
            <mdb-connection-factory>
                <jndi-name>jms/docdokuConnFactory</jndi-name>
                <default-resource-principal>
                    <name>guest</name>
                    <password>guest</password>
                </default-resource-principal>
            </mdb-connection-factory>
        </ejb>
        <ejb>
            <ejb-name>IndexerBean</ejb-name>
            <jndi-name>jms/docdokuIndexerQueue</jndi-name>
            <mdb-connection-factory>
                <jndi-name>jms/docdokuConnFactory</jndi-name>
                <default-resource-principal>
                    <name>guest</name>
                    <password>guest</password>
                </default-resource-principal>
            </mdb-connection-factory>
        </ejb>
        <ejb>
            <ejb-name>IndexSearcherBean</ejb-name>
            <jndi-name>ejb/IndexSearcherBean</jndi-name>
        </ejb>
    </enterprise-beans>
</sun-ejb-jar>
