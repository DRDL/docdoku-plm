<?xml version="1.0" encoding="UTF-8"?>

<project name="DocDoku-war-swing" default="sign-all" basedir=".">
    <description>Sign DocDoku Desktop Client.</description>
    
    <target name="sign-all" depends="sign-lib-jars, sign-apps-jars">
    </target>

    <target name="sign-lib-jars" depends="init">
        <apply executable="pack200" parallel="false">
            <arg value="-J-Xmx256M"/>
            <arg value="--repack"/>
            <arg value="--segment-limit=-1"/>
            <srcfile/>
            <fileset dir="${web.docbase.dir}/apps/lib" includes="**/*.jar" />
        </apply>

        <signjar alias="docdoku6" storepass="changeit">
            <path>
                <fileset dir="${web.docbase.dir}/apps/lib" includes="**/*.jar" />
            </path>
        </signjar>

        <apply executable="pack200" parallel="false" dest="${web.docbase.dir}/apps/lib">
            <arg value="-J-Xmx256M"/>
            <arg value="--segment-limit=-1"/>
            <targetfile/>
            <srcfile/>
            <fileset dir="${web.docbase.dir}/apps/lib" includes="**/*.jar" />
            <mapper type="glob" from="*" to="*.pack.gz" />
        </apply>
    </target>

    <target name="sign-apps-jars" depends="init">
        <copy file="../../docdoku-client/target/docdoku-client.jar" tofile="${web.docbase.dir}/apps/docdoku-client.jar"/>
        <copy file="../../docdoku-common/target/docdoku-common.jar" tofile="${web.docbase.dir}/apps/docdoku-common.jar"/>

        <apply executable="pack200" parallel="false">
            <arg value="-J-Xmx256M"/>
            <arg value="--repack"/>
            <arg value="--segment-limit=-1"/>
            <srcfile/>
            <filelist dir="${web.docbase.dir}/apps">
                <file name="docdoku-client.jar"/>
                <file name="docdoku-common.jar"/>
            </filelist>
        </apply>

        <signjar jar="${web.docbase.dir}/apps/docdoku-client.jar" alias="docdoku6" storepass="changeit"/>
        <signjar jar="${web.docbase.dir}/apps/docdoku-common.jar" alias="docdoku6" storepass="changeit"/>

        <apply executable="pack200" parallel="false" dest="${web.docbase.dir}/apps">
            <arg value="-J-Xmx256M"/>
            <arg value="--segment-limit=-1"/>
            <targetfile/>
            <srcfile/>
            <filelist dir="${web.docbase.dir}/apps">
                <file name="docdoku-client.jar"/>
                <file name="docdoku-common.jar"/>
            </filelist>
            <mapper type="glob" from="*" to="*.pack.gz" />
        </apply>
    </target>
</project>
