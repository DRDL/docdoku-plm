<?xml version="1.0" encoding="UTF-8"?>
<web-app metadata-complete="false" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.docdoku.server.filters.AuthFilter</filter-class>
        <async-supported>true</async-supported>
        <init-param>
            <param-name>excludedPaths</param-name>
            <param-value>/api/auth/**,/api/files/*/documents/**,/api/files/*/parts/**</param-value>
        </init-param>
        <init-param>
            <param-name>apiPath</param-name>
            <param-value>/api/*</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>javax.ws.rs.core.Application</servlet-name>
        <load-on-startup>1</load-on-startup>
        <async-supported>true</async-supported>
        <multipart-config>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>javax.ws.rs.core.Application</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    <security-constraint>
        <display-name>WebSocket channels</display-name>
        <web-resource-collection>
            <web-resource-name>Main Channel</web-resource-name>
            <url-pattern>/mainChannelSocket</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>users</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>docdokuRealm</realm-name>
    </login-config>
    <security-role>
        <description>All the regular users</description>
        <role-name>users</role-name>
    </security-role>
    <listener>
        <listener-class>
            com.docdoku.server.http.WebSessionListener
        </listener-class>
    </listener>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.html</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
</web-app>

