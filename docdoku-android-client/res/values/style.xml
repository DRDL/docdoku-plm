<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AppTheme" parent="android:Theme.Holo.Light" >
        <item name="android:textSize">20sp</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:alertDialogStyle">@style/Dialog</item>
        <item name="android:actionBarStyle">@style/Theme.ActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/Theme.OverflowStyle</item>
    </style>
    <style name="Dialog" parent="android:Theme.Holo.Light.Dialog">
        <item name = "android:textColor">@android:color/darker_gray</item>
    </style>
    <style name="Theme.ActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/background_light</item>
        <item name="android:titleTextStyle">@style/Theme.ActionBar.TitleTextStyle</item>
    </style>
    <style name="Theme.ActionBar.TitleTextStyle">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>
    <style name="Theme.OverflowStyle" parent="android:Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow_dark</item>
    </style>

    <!--Text styles-->
    <style name="Theme.AppTheme.BigTitle">
        <!--<item name="android:background">@android:color/transparent</item>-->
        <item name="android:padding">4dp</item>
        <item name="android:textSize">26sp</item>
    </style>
    <style name="Theme.AppTheme.MediumTitle">
        <!--<item name="android:background">@android:color/transparent</item>-->
        <item name="android:padding">4dp</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Theme.AppTheme.SmallText">
        <!--<item name="android:background">@android:color/transparent</item>-->
        <item name="android:textSize">18sp</item>
    </style>
    <!-- Indicators with image, shown in document and part lists -->
    <style name="Theme.AppTheme.Indicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- Side menu style -->
    <style name="Menu" parent="android:Theme.Holo.Light">
        <item name="android:background">@android:color/background_light</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>
    <style name="Menu.Title">
        <!--<item name="android:background">@color/lightBlue</item>-->
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <!--<item name="android:paddingTop">4dp</item>-->
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Menu.Item">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/menu_item</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/menu_item_selectable_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
    <style name="Menu.Item.RadioButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>