<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.docdoku.android.plm.client" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <!-- The application in this version targets only mobile phones -->
    <supports-screens
        android:anyDensity="true"
        android:largeScreens="false"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="com.docdoku.android.plm.client.permission.C2D_MESSAGE" />

    <permission
        android:name="com.docdoku.android.plm.client.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:icon="@drawable/docdoku_plm_icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppTheme" >

        <activity android:name=".connection.WelcomeScreen"/>

        <activity
            android:name="com.docdoku.android.plm.client.connection.ConnectionActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >

             <intent-filter>
                 <action android:name="android.intent.action.MAIN"/>
                 <category android:name="android.intent.category.LAUNCHER"/>
             </intent-filter>
        </activity>
        <activity
            android:name="com.docdoku.android.plm.client.gdx.GDXActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/act_gdx"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.docdoku.android.plm.client.documents.DocumentCompleteListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/act_documents_list"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.docdoku.android.plm.client.documents.DocumentSearchActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/act_document_search"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.docdoku.android.plm.client.parts.PartCompleteListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/act_parts_list"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.docdoku.android.plm.client.parts.PartSimpleListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/menu_parts"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.docdoku.android.plm.client.users.UserListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/act_user"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.docdoku.android.plm.client.parts.PartActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/act_part"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.docdoku.android.plm.client.documents.DocumentActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/act_document"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.docdoku.android.plm.client.parts.PartHistoryListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/act_parts_history"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.docdoku.android.plm.client.parts.PartSearchActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/act_part_search"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.docdoku.android.plm.client.documents.DocumentHistoryListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/act_documents_history"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.docdoku.android.plm.client.documents.DocumentSimpleListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/menu_documents"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.docdoku.android.plm.client.documents.DocumentFoldersActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/act_folders_list"
            android:screenOrientation="portrait" />

        <receiver
            android:name="com.docdoku.android.plm.client.GCM.GCMWakefulBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.docdoku.android.plm.client" />
            </intent-filter>
        </receiver>

        <service android:name="com.docdoku.android.plm.client.GCM.GCMIntentService" />
        <service android:name="com.docdoku.android.plm.client.GCM.NotificationService" />
        <service android:name="com.docdoku.android.plm.client.GCM.GCMRegisterService" />

    </application>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />

</manifest>
